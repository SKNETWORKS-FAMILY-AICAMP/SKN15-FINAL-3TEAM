# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL 연결 정보
DB_NAME=patentdb
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_LIFETIME=60  # minutes
REFRESH_TOKEN_LIFETIME=7  # days

# CORS (Next.js Frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OpenAI (AI Features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vector Database (Optional)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENV=your-pinecone-environment

# Redis (Celery)
REDIS_URL=redis://localhost:6379/0

# Chatbot Model Settings
CHATBOT_SERVICE=kosbert  # 'kosbert' or 'llama'
MODEL_SERVER_URL=http://localhost:8001  # LLaMA 모델 서버 URL (CHATBOT_SERVICE=llama일 때 사용)
KOSBERT_MODEL_NAME=BM-K/KoSimCSE-roberta  # KoSBERT 모델명 (Hugging Face)
# KOSBERT_CACHE_DIR=/path/to/cache  # 선택사항: 모델 캐시 디렉토리

# File Upload
MEDIA_ROOT=media
STATIC_ROOT=staticfiles
MAX_UPLOAD_SIZE=10485760  # 10MB

